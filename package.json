{
  "name": "shadow-monorepo",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "desktop:dev": "pnpm --filter=desktop run dev:electron",
    "desktop:build": "pnpm --filter=frontend run build && pnpm --filter=desktop run build",
    "desktop:package": "pnpm --filter=desktop run package"
  },
  "prisma": {
    "schema": "packages/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
